<body id="LoginForm">
    <input type="hidden" id="iResult" value="@ViewBag.Result" />

    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>User Login</h2>
                    <p>Please enter your email and password</p>
                </div>
                
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", id = "frmSubmit", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                   <div class="form-group">
                        
                       @*@Html.LabelFor(m => m.Username, new { @class = "col-md-12  text-left color " })*@
                       @Html.TextBoxFor(m => m.Username,  new { @class = "form-control placeholder-no-fix itmuser" })
                       @Html.ValidationMessageFor(m => m.Username)



                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-12  text-left color" })*@
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-solid placeholder-no-fix" })
                        @Html.ValidationMessageFor(m => m.Password)


                    </div>
                    <div class="forgot">
                        @*<a href="reset.html">Forgot password?</a>*@
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "control-label" })

                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    
                }

                 
            </div>
            <p class="botto-text"></p>
        </div>

    </div>

</body>


