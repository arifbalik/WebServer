
@{
    ViewBag.Title = "BolumList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}


<script>

    var iOperation = 0;
    var iClassID = 0;
    var iAjax = 0;

    $(function () {


        $('#btnNew').click(function () {

            iOperation = 1;
            iClassID = 0;
            $('#txtClassName').val('');

            $('#editRow').fadeIn(500);

            setTimeout(function () {
                $('#txtClassName').focus();

            }, 600);

        });



        $('#editRow').hide();

        $("#txtClassName").on("keydown", function (event) {
            if (event.which == 13) {
                doSave();

            }
            else if (event.which == 27) {
                Cancel();

            }

        });

        $("#txtStartTime").on("keydown", function (event) {
            if (event.which == 13) {
                doSave();

            }
            else if (event.which == 27) {
                Cancel();

            }

        });


        $("#txtEndTime").on("keydown", function (event) {
            if (event.which == 13) {
                doSave();

            }
            else if (event.which == 27) {
                Cancel();

            }

        });

        LoadData();


    });

    function Cancel()
    {
        iOperation = 0;
        $('#editRow').fadeOut(500);
        $('#txtClassName').val('');
    }

    function doSave() {

        var strClassName = $('#txtClassName').val();

        if (!strClassName || strClassName.length == 0) {
            notifyE('Please Enter Class Name');
            $('#txtClassName').focus();
            return;
        }

        var strStart = $('#txtStartTime').val();
        if(strStart.length > 0 && strStart.length != 5)
        {
            notifyE('Please Enter valid time');
            $('#txtStartTime').focus();
            return;
            
        }

        var strEnd = $('#txtEndTime').val();
        if (strEnd.length > 0 && strEnd.length != 5) {
            notifyE('Please Enter valid time');
            $('#txtEndTime').focus();
            return;

        }

        if (iAjax == 1) return;

        var params = {
            "Operation": iOperation,
            "ClassID": iClassID,
            "ClassName": strClassName,
            "WorkDay": $('#cmbWorkDay').val(),
            "StartTime": strStart,
            "EndTime": strEnd

        };

        iAjax = 1;

        $.ajax({
            type: "GET",
            url: "/Student/SaveClass/",
            data: params,
            success: function (msg) {
                var str = parseInt(msg);
                if (str > 0) {
                    iAjax = 0;
                    $('#txtClassName').val('');
                    LoadData();
                    if (iOperation == 2) {
                        $('#editRow').fadeOut(100);

                    }

                }
                


            },
            error: function (request, status, error) {
                iAjax = 0;
            }

        });


    }

    function LoadData() {

        $.ajax({
            type: "GET",
            url: "/Student/ClassListAll/",
            success: function (response) {
                var dtList = response.data;
                var strBody = '';

                for (var i = 0; i < dtList.length; i++) {
                    var iWorkDay = dtList[i].WorkDay;
                    var strDay = '';

                    if (iWorkDay == 1) {
                        strDay = 'Monday';

                    }
                    else if (iWorkDay == 2)
                    {
                        strDay = 'Tuesday';

                    }
                    else if (iWorkDay == 3)
                    {
                        strDay = 'Wednesday';

                    }
                    else if (iWorkDay == 4) {
                        strDay = 'Thursday';


                    }
                    else if (iWorkDay == 5) {
                        strDay = 'Friday';

                    }
                    else if (iWorkDay == 6) {
                        strDay = 'Saturday';

                    }
                    else if (iWorkDay == 7) {
                        strDay = 'Sunday';

                    }

                    var strRow = '<tr>' +
                                 '<td>' + dtList[i].ClassID + '</td>' +
                                 '<td>' + dtList[i].ClassName + '</td>' +
                                 '<td>' + strDay + '</td>' +
                                 '<td>' + dtList[i].StartTime + '</td>' +
                                 '<td>' + dtList[i].EndTime + '</td>' +

                                 '<td style="cursor:pointer;" onclick="javascript:EditClass(this);" data-id="' + dtList[i].ClassID + '" data-bolum="' + dtList[i].ClassName + '" >  Edit</td>' +
                                 '<td style="cursor:pointer;" onclick="javascript:DeleteClass(this);" data-id="' + dtList[i].ClassID + '"> Delete </td>' +
                                 '</tr>';

                    strBody += strRow;

                }
                $('#tableBolumList tbody').html(strBody);

            },
            error: function (request, status, error) {

            }

        });

    }


    function EditClass(itm)
    {
        var id = $(itm).attr('data-id');
        var bolum = $(itm).attr('data-bolum');

        iOperation = 2;
        iClassID = id;

        $('#txtClassName').val(bolum);
        //$('#modalEdit').modal('show');
        $('#editRow').fadeIn(1000);
        setTimeout(function () {
            $('#txtClassName').focus();

        }, 500);


    }

    function DeleteClass(itm)
    {
        var id = $(itm).attr('data-id');

        if (iAjax == 1) return;
        var params = { "ClassID": id };
        iAjax = 1;

        $.ajax({
            type: "GET",
            url: "/Student/DeleteClass/",
            data: params,
            success: function (msg) {

                iAjax = 0;

                var str = parseInt(msg);
                if (str > 0) {

                    LoadData();
                    notifyS('Class Deleted');

                }
                else if (str == -1) {

                }
            },
            error: function (request, status, error) {
                iAjax = 0;

            }

        });

    }


</script>

